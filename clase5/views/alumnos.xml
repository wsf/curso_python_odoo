<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="curso_alumnos_tree" model="ir.ui.view">
        <field name="name">curso.alumnos</field>
        <field name="model">curso.alumnos</field>
        <field name="arch" type="xml">

            <tree>
                        <header>
                           <button string="Cant Mayores" name="cant_mayores" type="object"/>
                        </header>

                <field name="name"/>
                <field name="edad"/>
                <field name="sexo"/>

            </tree>


        </field>
    </record>
    <record id="view_curso_alumnos_form" model="ir.ui.view">
        <field name="name">curso.alumnos.form</field>
        <field name="model">curso.alumnos</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="edad"/>
                            <field name="sexo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_curso_alumnos" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">curso.alumnos</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
<!--        <field name="context">{'search_default_responsible_id': 1}</field>-->


    </record>
    <menuitem id="menu_curso_python_odoo"
              name="Curso Python Odoo"
              sequence="10"/>
    <menuitem id="menu_alumno_root"
              name="Alumno"
              parent="menu_curso_python_odoo"
              sequence="10"/>
      <menuitem id="menu_alumnos"
              name="Alumnos"
              parent="menu_alumno_root"
              action="action_curso_alumnos"
              sequence="10"/>
</odoo>